{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "echoCommand": true,
    "cwd": "${workspaceFolder}",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
    },
    "tasks": [
        {
            "label": "build",
            "command": "go build -v -x -ldflags=\"-s -w\" -o ${workspaceFolder}/esphome-homekit-service ./cmd/ && echo done",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$go",
            "windows": {
                "command": "go build -v -x -ldflags=\"-s -w\" -o ${workspaceFolder}/bin/esphome-homekit-service.exe ./cmd/ && echo done",
            }
        }
    ]
}
