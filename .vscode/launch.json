    "version": "0.2.0",
    "configurations": [
        {
            "name": "Service",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "args": [
                "--log_level=trace",
            ],
            "buildFlags": "-x -v",
            "output": "${workspaceFolder}/bin/esphome-homekit-service",
            "windows": {
                "output": "${workspaceFolder}/bin/esphome-homekit-service.exe",
                "env": {
                    "LOG_FORMAT": "color"
                }
            },
            "cwd": "${workspaceFolder}/bin/",
        }
    ]
}